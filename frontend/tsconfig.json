{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "module": "es2015",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017.object", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "outDir": "build"
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules/**/*"]
}
